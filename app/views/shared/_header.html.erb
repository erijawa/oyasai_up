

<header class="navbar bg-base sticky top-0 left-0 w-full z-50">
    <div class="flex-1">
      <%= image_tag 'tomato.png', class: "h-10 ml-2 rounded-full" %>
      <%= link_to "おやさいUP", root_path, class: "btn btn-ghost text-xl" %>
    </div>
    <div class="flex-none">
        <div class="drawer drawer-end">
            <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content">
                <label for="my-drawer-4" class="drawer-button btn btn-ghost">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </label>
            </div>
            <div class="drawer-side">
                <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
                <ul class="menu bg-base-200 bg-opacity-95 text-base-content min-h-full w-80 p-4">

                    <% if user_signed_in? %>
                      <li>
                          <%= link_to "#", class: "text-base hover:text-secondary" do %>
                              <%= image_tag 'tomato.png', class: 'h-4 w-4 mr-2' %>
                              <%= t('header.my_page') %>
                          <% end %>
                      </li>
                      <li>
                          <%= link_to destroy_user_session_path, class: "text-base hover:text-secondary", data: { turbo_method: :delete } do %>
                              <%= image_tag 'tomato.png', class: 'h-4 w-4 mr-2' %>
                              <%= t('header.logout') %>
                          <% end %>
                      </li>
                    <% else %>
                      <li>
                          <%= link_to "#", class: "text-base hover:text-secondary" do %>
                              <%= image_tag 'tomato.png', class: 'h-4 w-4 mr-2' %>
                              <%= t('header.login') %>
                          <% end %>
                      </li>
                    <% end %>

                    <div class="divider"></div>
                    <li>
                        <%= link_to "#", data: { turbo: false }, class: "text-base hover:text-secondary" do %>
                            <%= image_tag 'tomato.png', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.spot_search') %>
                        <% end %>
                    </li>

                    <div class="divider"></div>

                    <li>
                        <%= link_to "#", class: "text-base hover:text-secondary" do %>
                            <%= image_tag 'tomato.png', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.terms_of_use') %>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to "#", class: "text-base hover:text-secondary" do %>
                            <%= image_tag 'tomato.png', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.privacy_policy') %>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to "#", target: "_blank", rel: "noopener noreferrer", class: "text-base hover:text-secondary" do %>
                            <%= image_tag 'tomato.png', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.contact') %>
                        <% end %>
                    </li>

                    <div class="divider"></div>

                    <%# コピーライト %>
                    <div class="text-sm text-center m-3"><%= t('header.copy_right') %></div>

                    <div class="flex justify-center items-center my-3">
                        <%= link_to "#", target: "_blank", rel: "noopener noreferrer" , class: "mr-3" do %>
                            <%= image_tag 'github-icon.svg', class: "h-6" %>
                        <% end %>
                        <%= link_to "#", target: "_blank", rel: "noopener noreferrer", class: "ml-3" do %>
                            <%= image_tag 'x.svg', class: "h-6" %>
                        <% end %>
                    </div>
                </ul>
            </div>
        </div>
    </div>
</header>
