

<header class="navbar bg-base sticky top-0 left-0 w-full z-50">
    <div class="flex-1">
      <%= image_tag 'logo.png', class: "h-10 ml-2 rounded-full" %>
      <%= link_to "おやさいUP", root_path, class: "btn btn-ghost text-xl" %>
    </div>
    <div class="flex-none">
        <div class="drawer drawer-end">
            <input id="my-drawer-4" type="checkbox" class="drawer-toggle" />
            <div class="drawer-content">
                <label for="my-drawer-4" class="drawer-button btn btn-ghost">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block h-5 w-5 stroke-current">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                    </svg>
                </label>
            </div>
            <div class="drawer-side">
                <label for="my-drawer-4" aria-label="close sidebar" class="drawer-overlay"></label>
                <ul class="menu bg-base-200 bg-opacity-95 text-neutral min-h-full w-80 p-4">

                    <% if user_signed_in? %>
                      <li class="mb-4">
                          <%= link_to t('header.vegetable_log'),user_path(current_user), class: "btn btn-accent text-neutral", data: { turbo: false } %>
                      </li>
                      <li>
                        <%= link_to user_path(current_user), data: { turbo: false }, class: "text-base hover:text-secondary", data: { turbo: false } do %>
                            <%= image_tag 'person_neutral.svg', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.my_page') %>
                        <% end %>
                      </li>
                      <li>
                          <%= link_to destroy_user_session_path, class: "text-base hover:text-secondary", data: { turbo_method: :delete } do %>
                              <%= image_tag 'logout.svg', class: 'h-4 w-4 mr-2' %>
                              <%= t('header.logout') %>
                          <% end %>
                      </li>
                    <% else %>
                      <li>
                          <%= link_to new_user_session_path, class: "text-base hover:text-secondary" do %>
                              <%= image_tag 'login.svg', class: 'h-4 w-4 mr-2' %>
                              <%= t('header.login') %>
                          <% end %>
                      </li>
                    <% end %>

                    <div class="divider"></div>
                    <li>
                        <%= link_to posts_path, data: { turbo: false }, class: "text-base hover:text-secondary" do %>
                            <%= image_tag 'search_neutral.svg', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.post_index') %>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to bookmarks_posts_path, data: { turbo: false }, class: "text-base hover:text-secondary" do %>
                            <%= image_tag 'bookmark_neutral.svg', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.bookmark_index') %>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to new_post_path, data: { turbo: false }, class: "text-base hover:text-secondary" do %>
                            <%= image_tag 'pencil_neutral.svg', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.post_new') %>
                        <% end %>
                    </li>
                    <li>
                        <%= link_to drafts_posts_path, data: { turbo: false }, class: "text-base hover:text-secondary" do %>
                            <%= image_tag 'note_neutral.svg', class: 'h-4 w-4 mr-2' %>
                            <%= t('header.draft_index') %>
                        <% end %>
                    </li>


                    <div class="divider"></div>

                    <li>
                        <%= link_to t('defaults.terms_of_service'),term_path, class: "text-base hover:text-secondary" %>
                    </li>
                    <li>
                        <%= link_to t('defaults.privacy_policy'),policy_path, class: "text-base hover:text-secondary" %>
                    </li>
                    <li>
                        <%= link_to t('defaults.contact'),inquiry_path,class: "text-base hover:text-secondary"%>
                    </li>

                    <div class="divider"></div>

                    <div class="text-sm text-center m-3">© <%= Time.current.year %> - おやさいUP</div>

                    <div class="flex justify-center items-center my-3">
                        <%= link_to "https://github.com/erijawa/oyasai_up", target: "_blank", rel: "noopener noreferrer",class: "mr-3", data: { toggle: "tooltip", placement: "bottom" }, title: "GitHub" do %>
                            <%= image_tag 'github-icon.svg', class: "h-6" %>
                        <% end %>
                        <%= link_to "https://twitter.com/intent/tweet?url=#{root_url}&text=【おやさいUP】日々のお野菜摂取を応援します。%0a%23おやさいUP%0a", target: "_blank", rel: "noopener noreferrer",data: { toggle: "tooltip", placement: "bottom" }, title: "Xでシェア",class: "ml-3" do %>
                            <%= image_tag 'x.svg', class: "h-6" %>
                        <% end %>
                    </div>
                </ul>
            </div>
        </div>
    </div>
</header>
