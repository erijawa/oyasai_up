<div class="container form-container">
  <h2>ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"label w-full mx-auto" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input input-bordered input-info form-control mb-6 w-full mx-auto' %>
    </div>

    <div class="field">
      <%= f.label :password, class:"label w-full mx-auto" %>
      <%= f.password_field :password, autocomplete: "current-password", class: 'input input-bordered input-info form-control mb-6 w-full mx-auto' %>
    </div>



    <div class="actions">
      <%= f.submit 'ログイン', class: 'btn btn-info w-full mt-6 mx-auto' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
