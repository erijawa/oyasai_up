<div class="container">
  <h2><%= t('.title') %></h2>
  <% if @posts.present? %>
    <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-8 xl:grid-cols-3 xl:gap-6 break-words">
      <%= render @posts %>
    </div>
    <%= paginate @posts %>
  <% else %>
    <p class="text-center">投稿がありません</p>
  <% end %>
</div>
